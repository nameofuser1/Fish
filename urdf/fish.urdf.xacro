<?xml version="1.0"?>

<robot name="fish" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="mesh_scale" value="0.001 0.001 0.001" />
  
  <xacro:property name="body_center_gravity" value="0.31665 0.10664 0.06385"/>
  <xacro:property name="body_mass" value="54.54" />
  <xacro:property name="volume" value="0.05295219" />

  <xacro:property name="model_name" value="Torpeda.STL" />

<!-- Creating reference frame  -->
  <link name="world" />
  <!--<link name="base_link" />-->


<!-- FISH -->
  <link name="body_link">
    <visual>
      <geometry>
        <mesh filename="file://$(find fish)/meshes/${model_name}" scale="${mesh_scale}"/>
      </geometry>
      <material name="Green">
        <color rgba="0.2 1.0 0.2 1.0"/>
      </material>

      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0" />
    </visual>

    <collision>
      <geometry>
        <mesh filename="file://$(find fish)/meshes/${model_name}" scale="${mesh_scale}" />
      </geometry>
    </collision>

    <inertial>
      <origin rpy="0.0 0.0 0.0" xyz="${body_center_gravity}"/>
      <mass value="${body_mass}"/>
      <inertia ixx="0.20628980082" ixy="0.0" ixz="0.0"
        iyy="0.94202350902" iyz="0.0"  izz="1.05359207913"/>
    </inertial>
  </link>

