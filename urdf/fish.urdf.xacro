  <!-- CONTROL PLUGIN -->
	<joint name="world_joint" type="floating">
		<parent link="world"/>
		<child link="body_link"/>
    <origin rpy="${pi/2} 0.0 0.0" xyz="0.0 0.0 0.0" />
  </joint>
  
  <gazebo reference="body_link">
    <material>Gazebo/Green</material>
    <kp>100000.0</kp>
    <kd>100000.0</kd>
    <mu1>10.0</mu1>
    <mu2>10.0</mu2>>
  </gazebo> 
  
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  
    <plugin name="buoyancy" filename="libBuoyancyPlugin.so">
      <link name="body_link">
        <center_of_volume>0.31665 0.10664 0.06385</center_of_volume>
        <volume>0.05295219</volume>
      </link>

      <fluid_density>1030</fluid_density>
    </plugin>
  </gazebo>


</robot>

